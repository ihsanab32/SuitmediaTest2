<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/dimen7dp"
    android:layout_height="@dimen/dimen120dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/dimen5dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="@dimen/dimen5dp">

        <LinearLayout
            android:id="@+id/itm_kupon1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageView
                android:id="@+id/iv_coupon"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen120dp"
                android:layout_gravity="center"
                android:layout_weight="3.5"
                android:scaleY="2"
                android:src="@drawable/lailatulkoding" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="@dimen/dimen10dp">

                <TextView
                    android:id="@+id/txt_no_coupon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/qs_reguler"
                    android:text="@string/default_event"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text14sp" />

                <TextView
                    android:id="@+id/txt_mall_name_coupon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/qs_reguler"
                    android:text="@string/default_date"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text14sp" />



            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>